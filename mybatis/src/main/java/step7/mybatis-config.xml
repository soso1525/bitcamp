<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<properties resource="step7/jdbc.properties" />

	<typeAliases>
		<typeAlias type="step7.Board" alias="board" />
	</typeAliases>

	<!-- 사용할 DBMS info -->
	<environments default="development">
		<environment id="development">

			<!-- transaction(데이터 변경(CRUD)하는 여러 sql문을 한 단위로 묶은 것)을 어떻게 관리할 것인지 설정 -->
			<transactionManager type="JDBC" /> <!-- JDBC : mybatis에게 JDBC API를 사용하여 트랜잭션을 관리하라는 뜻 -->

			<!-- connection pool 사용 지정 -->
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>

		</environment>
	</environments>

	<!-- SQL문이 들어있는 XML 파일의(SQL Mapper 파일) 위치 정보를 등록 -->
	<!-- 이 파일의 경로는 보통 자바 클래스 경로 -->
	<mappers>
		<mapper resource="step7/JdbcTestMapper.xml" />
	</mappers>
</configuration>